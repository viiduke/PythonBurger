/* burgry-style.css - Layout expandido para tela inteira com suporte a temas */

/* Reset e base */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Força o conteúdo a ocupar toda a largura */
.hero-section,
.category-section,
.promo-section,
.about-section,
.menu-section,
.video-section,
.app-section,
.testimonials-section,
.cta-section,
.news-section,
.newsletter-section {
    margin-left: calc(-50vw + 50%) !important;
    margin-right: calc(-50vw + 50%) !important;
    width: 100vw !important;
}

.content {
    padding-top: 0 !important;
}

body {
    font-family: 'Arial', sans-serif;
    background-color: var(--bg-primary);
    color: var(--text-primary);
    line-height: 1.6;
    overflow-x: hidden;
    width: 100vw;
    min-height: 100vh;
}

/* Hero Section */
.hero-section {
    background-color: var(--bg-primary);
    min-height: 100vh;
    padding: 60px 0;
    position: relative;
    width: 100%;
    margin-top: -60px !important;
}

.hero-container {
    max-width: 100%;
    width: 100vw;
    margin: 0;
    padding: 0 40px;
}

.hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
    min-height: 80vh;
    max-width: 1400px;
    margin: 0 auto;
}

.hero-title {
    font-size: 4rem;
    font-weight: 900;
    line-height: 1.1;
    margin-bottom: 20px;
    color: var(--text-primary);
    text-transform: uppercase;
    letter-spacing: -1px;
}

.hero-underline {
    width: 80px;
    height: 5px;
    background-color: #FFA500;
    margin-bottom: 30px;
}

.hero-description {
    font-size: 1.2rem;
    color: var(--text-secondary);
    margin-bottom: 40px;
    line-height: 1.8;
}

.hero-features {
    display: flex;
    gap: 50px;
    margin-bottom: 40px;
}

.feature-item {
    display: flex;
    align-items: center;
    gap: 15px;
}

.feature-icon {
    font-size: 2.5rem;
    color: #FFA500;
}

.feature-text h4 {
    font-size: 1.2rem;
    color: var(--text-primary);
    font-weight: 600;
}

.learn-more-btn {
    background-color: #FFA500;
    color: #000000;
    padding: 18px 40px;
    border: none;
    border-radius: 8px;
    font-size: 1.1rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
}

.learn-more-btn:hover {
    background-color: #ff8c00;
    transform: translateY(-2px);
}

.hero-image {
    display: flex;
    justify-content: center;
    align-items: center;
}

.hero-burger-img {
    width: 500px;
    height: 500px;
    object-fit: cover;
    border-radius: 20px;
    animation: float 3s ease-in-out infinite;
    filter: drop-shadow(0 15px 30px rgba(0, 0, 0, 0.5));
}

/* Category Cards Section */
.category-section {
    padding: 100px 0;
    background-color: var(--bg-primary);
    width: 100%;
}

.category-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
}

.category-card {
    border-radius: 25px;
    padding: 40px;
    display: flex;
    align-items: center;
    gap: 25px;
    transition: transform 0.3s ease;
    min-height: 140px;
}

.category-card:hover {
    transform: translateY(-8px);
}

.food-card {
    background: linear-gradient(135deg, #FFA500 0%, #ff8c00 100%);
}

.snack-card {
    background: linear-gradient(135deg, #228B22 0%, #32CD32 100%);
}

.beverage-card {
    background: linear-gradient(135deg, #DC143C 0%, #FF6347 100%);
}

.category-image {
    width: 100px;
    height: 80px;
    border-radius: 15px;
    overflow: hidden;
}

.category-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.category-content h3 {
    font-size: 1.8rem;
    font-weight: 900;
    margin-bottom: 10px;
    color: var(--text-primary);
}

.category-content p {
    font-size: 1rem;
    margin-bottom: 20px;
    color: var(--text-primary);
    opacity: 0.9;
}

.category-btn {
    background-color: rgba(255, 255, 255, 0.2);
    color: var(--text-primary);
    border: none;
    padding: 10px 25px;
    border-radius: 25px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
}

.category-btn:hover {
    background-color: rgba(255, 255, 255, 0.3);
}

/* Promo Section */
.promo-section {
    padding: 100px 0;
    background-color: var(--bg-primary);
    width: 100%;
}

.promo-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
}

.promo-card {
    background-color: var(--bg-secondary);
    border-radius: 25px;
    padding: 50px;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    gap: 30px;
    min-height: 200px;
}

.promo-text {
    flex: 1;
}

.promo-badge {
    background-color: #FFA500;
    color: #000000;
    padding: 8px 20px;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 700;
    display: inline-block;
    margin-bottom: 25px;
    text-transform: uppercase;
}

.promo-card h3 {
    font-size: 2rem;
    font-weight: 900;
    margin-bottom: 20px;
    color: var(--text-primary);
    line-height: 1.2;
}

.promo-card p {
    color: var(--text-secondary);
    margin-bottom: 30px;
    line-height: 1.6;
    font-size: 1rem;
}

.promo-btn {
    background-color: #FFA500;
    color: #000000;
    border: none;
    padding: 15px 30px;
    border-radius: 8px;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
}

.promo-btn:hover {
    background-color: #ff8c00;
}

.promo-image {
    width: 180px;
    height: 150px;
    border-radius: 20px;
    overflow: hidden;
}

.promo-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

/* About Section */
.about-section {
    padding: 120px 0;
    background-color: var(--bg-primary);
    width: 100%;
}

.about-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 100px;
    align-items: center;
}

.about-image {
    display: flex;
    justify-content: center;
    align-items: center;
}

.about-img {
    width: 100%;
    max-width: 600px;
    height: 500px;
    object-fit: cover;
    border-radius: 25px;
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);
}

.about-content h2 {
    font-size: 3rem;
    font-weight: 900;
    line-height: 1.2;
    margin-bottom: 25px;
    color: var(--text-primary);
    text-transform: uppercase;
}

.about-underline {
    width: 80px;
    height: 5px;
    background-color: #FFA500;
    margin-bottom: 35px;
}

.about-content p {
    color: var(--text-secondary);
    margin-bottom: 50px;
    line-height: 1.8;
    font-size: 1.2rem;
}

.about-features {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 50px;
}

.about-feature {
    display: flex;
    align-items: center;
    gap: 15px;
}

.check-icon {
    color: #FFA500;
    font-size: 1.4rem;
    font-weight: bold;
}

.about-feature span:last-child {
    color: var(--text-primary);
    font-weight: 500;
    font-size: 1.1rem;
}

.about-btn {
    background-color: #FFA500;
    color: #000000;
    padding: 18px 40px;
    border: none;
    border-radius: 8px;
    font-size: 1.1rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
}

.about-btn:hover {
    background-color: #ff8c00;
}

/* Menu Section */
.menu-section {
    padding: 120px 0;
    background-color: var(--bg-primary);
    width: 100%;
}

.menu-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
}

.menu-header {
    text-align: center;
    margin-bottom: 80px;
}

.menu-header h2 {
    font-size: 3rem;
    font-weight: 900;
    margin-bottom: 25px;
    color: var(--text-primary);
    text-transform: uppercase;
}

.menu-underline {
    width: 80px;
    height: 5px;
    background-color: #FFA500;
    margin: 0 auto 35px;
}

.menu-header p {
    color: var(--text-secondary);
    font-size: 1.2rem;
    max-width: 700px;
    margin: 0 auto;
}

.menu-tabs {
    display: flex;
    justify-content: center;
    gap: 30px;
    margin-bottom: 80px;
}

.menu-tab {
    background-color: var(--bg-card);
    color: var(--text-primary);
    border: none;
    padding: 15px 40px;
    border-radius: 8px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
}

.menu-tab.active,
.menu-tab:hover {
    background-color: #FFA500;
    color: #000000;
}

.menu-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 40px;
}

.menu-item {
    background-color: var(--bg-secondary);
    border-radius: 25px;
    padding: 40px;
    text-align: center;
    transition: transform 0.3s ease;
}

.menu-item:hover {
    transform: translateY(-8px);
}

.menu-item-image {
    width: 100%;
    height: 200px;
    border-radius: 20px;
    overflow: hidden;
    margin-bottom: 25px;
}

.menu-item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.menu-item h4 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 20px;
    color: var(--text-primary);
    text-transform: uppercase;
}

.menu-item p {
    color: var(--text-secondary);
    margin-bottom: 25px;
    line-height: 1.6;
    font-size: 1rem;
}

.menu-price {
    font-size: 2rem;
    font-weight: 900;
    color: #FFA500;
}

/* Video Section */
.video-section {
    padding: 0;
    background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('https://images.unsplash.com/photo-1571091718767-18b5b1457add?w=1400&h=700&fit=crop&crop=center');
    background-size: cover;
    background-position: center;
    min-height: 600px;
    display: flex;
    align-items: center;
    position: relative;
    width: 100%;
}

.video-overlay {
    width: 100%;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(2px);
}

.video-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 120px 40px;
    text-align: center;
    color: var(--text-primary);
}

.play-button {
    width: 100px;
    height: 100px;
    background-color: #FFA500;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2.5rem;
    color: #000000;
    margin: 0 auto 40px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.play-button:hover {
    transform: scale(1.1);
    background-color: #ff8c00;
}

.video-container h2 {
    font-size: 3rem;
    font-weight: 900;
    margin-bottom: 25px;
    text-transform: uppercase;
}

.video-container p {
    font-size: 1.2rem;
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.8;
    color: var(--text-secondary);
}

/* App Section */
.app-section {
    padding: 120px 0;
    background-color: var(--bg-primary);
    width: 100%;
}

.app-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 100px;
    align-items: center;
}

.app-image {
    display: flex;
    justify-content: center;
    align-items: center;
}

.phone-mockup {
    max-width: 400px;
    height: auto;
    border-radius: 30px;
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
}

.app-content h2 {
    font-size: 3rem;
    font-weight: 900;
    line-height: 1.2;
    margin-bottom: 25px;
    color: var(--text-primary);
    text-transform: uppercase;
}

.app-underline {
    width: 80px;
    height: 5px;
    background-color: #FFA500;
    margin-bottom: 35px;
}

.app-content p {
    color: var(--text-secondary);
    margin-bottom: 50px;
    line-height: 1.8;
    font-size: 1.2rem;
}

.app-features {
    margin-bottom: 50px;
}

.app-feature {
    display: flex;
    align-items: center;
    gap: 25px;
    margin-bottom: 30px;
}

.app-feature-icon {
    font-size: 3rem;
    color: #FFA500;
    background-color: var(--bg-secondary);
    padding: 20px;
    border-radius: 20px;
}

.app-feature-text h4 {
    font-size: 1.4rem;
    font-weight: 700;
    margin-bottom: 8px;
    color: var(--text-primary);
}

.app-feature-text p {
    color: var(--text-secondary);
    margin: 0;
    font-size: 1rem;
}

.app-download {
    display: flex;
    gap: 20px;
}

.app-store-btn,
.google-play-btn {
    height: 60px;
    width: auto;
    cursor: pointer;
    transition: all 0.3s ease;
}

.app-store-btn:hover,
.google-play-btn:hover {
    transform: scale(1.05);
}

/* Testimonials Section */
.testimonials-section {
    padding: 120px 0;
    background-color: var(--bg-primary);
    width: 100%;
}

.testimonials-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
}

.testimonials-header {
    text-align: center;
    margin-bottom: 80px;
}

.testimonials-header h2 {
    font-size: 3rem;
    font-weight: 900;
    margin-bottom: 25px;
    color: var(--text-primary);
    text-transform: uppercase;
}

.testimonials-underline {
    width: 80px;
    height: 5px;
    background-color: #FFA500;
    margin: 0 auto 35px;
}

.testimonials-header p {
    color: var(--text-secondary);
    font-size: 1.2rem;
    max-width: 700px;
    margin: 0 auto;
}

.testimonials-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
}

.testimonial-card {
    background-color: var(--bg-secondary);
    border-radius: 25px;
    padding: 50px;
    position: relative;
}

.testimonial-card p {
    color: var(--text-secondary);
    margin-bottom: 40px;
    line-height: 1.8;
    font-size: 1.1rem;
}

.testimonial-author {
    display: flex;
    align-items: center;
    gap: 20px;
}

.author-avatar {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    overflow: hidden;
}

.author-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.author-info h4 {
    font-size: 1.1rem;
    font-weight: 700;
    margin-bottom: 8px;
    color: var(--text-primary);
    text-transform: uppercase;
}

.author-info span {
    color: var(--text-secondary);
    font-size: 1rem;
}

.quote-icon {
    position: absolute;
    top: 25px;
    right: 35px;
    font-size: 4rem;
    color: #FFA500;
    font-weight: 900;
}

/* CTA Section */
.cta-section {
    padding: 0;
    background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('https://images.unsplash.com/photo-1530103862676-de8c9debad1d?w=1400&h=700&fit=crop&crop=center');
    background-size: cover;
    background-position: center;
    min-height: 500px;
    display: flex;
    align-items: center;
    width: 100%;
}

.cta-overlay {
    width: 100%;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(5px);
}

.cta-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 100px 40px;
}

.cta-content {
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
}

.cta-content h2 {
    font-size: 3.5rem;
    font-weight: 900;
    line-height: 1.2;
    margin-bottom: 25px;
    color: var(--text-primary);
    text-transform: uppercase;
}

.cta-underline {
    width: 80px;
    height: 5px;
    background-color: #FFA500;
    margin: 0 auto 35px;
}

.cta-content p {
    color: var(--text-secondary);
    margin-bottom: 50px;
    font-size: 1.2rem;
    line-height: 1.8;
}

.reservation-btn {
    background-color: #FFA500;
    color: #000000;
    border: none;
    padding: 20px 50px;
    border-radius: 8px;
    font-size: 1.2rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
}

.reservation-btn:hover {
    background-color: #ff8c00;
    transform: translateY(-2px);
}

/* News Section */
.news-section {
    padding: 120px 0;
    background-color: var(--bg-primary);
    width: 100%;
}

.news-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
}

.news-header {
    text-align: center;
    margin-bottom: 80px;
}

.news-header h2 {
    font-size: 3rem;
    font-weight: 900;
    margin-bottom: 25px;
    color: var(--text-primary);
    text-transform: uppercase;
}

.news-underline {
    width: 80px;
    height: 5px;
    background-color: #FFA500;
    margin: 0 auto 35px;
}

.news-header p {
    color: var(--text-secondary);
    font-size: 1.2rem;
    max-width: 700px;
    margin: 0 auto;
}

.news-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
}

.news-card {
    background-color: var(--bg-secondary);
    border-radius: 25px;
    overflow: hidden;
    transition: transform 0.3s ease;
}

.news-card:hover {
    transform: translateY(-8px);
}

.news-image {
    height: 250px;
    position: relative;
    overflow: hidden;
}

.news-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.news-category {
    position: absolute;
    top: 20px;
    left: 20px;
    background-color: #FFA500;
    color: #000000;
    padding: 8px 20px;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 700;
    text-transform: uppercase;
}

.news-card h3 {
    font-size: 1.4rem;
    font-weight: 700;
    margin: 30px 30px 20px;
    color: var(--text-primary);
    line-height: 1.3;
    text-transform: uppercase;
}

.news-card p {
    color: var(--text-secondary);
    margin: 0 30px 25px;
    line-height: 1.6;
    font-size: 1rem;
}

.news-link {
    color: #FFA500;
    text-decoration: none;
    font-weight: 600;
    margin: 0 30px 30px;
    display: inline-block;
    transition: color 0.3s ease;
}

.news-link:hover {
    color: #ff8c00;
}

/* Newsletter Section */
.newsletter-section {
    padding: 80px 0;
    background-color: #FFA500;
    width: 100%;
}

.newsletter-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 60px;
}

.newsletter-content h2 {
    font-size: 2.5rem;
    font-weight: 900;
    margin-bottom: 15px;
    color: #000000;
    text-transform: uppercase;
}

.newsletter-content p {
    color: #000000;
    font-size: 1.1rem;
    opacity: 0.8;
}

.newsletter-form {
    display: flex;
    gap: 20px;
    align-items: center;
}

.newsletter-input {
    padding: 18px 25px;
    border: none;
    border-radius: 8px;
    font-size: 1.1rem;
    width: 400px;
    background-color: #ffffff;
    color: #000000;
}

.newsletter-input::placeholder {
    color: #999;
}

.newsletter-btn {
    background-color: #000000;
    color: #ffffff;
    border: none;
    padding: 18px 30px;
    border-radius: 8px;
    font-size: 1.1rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
}

.newsletter-btn:hover {
    background-color: var(--bg-card);
}

/* Status Floating */
.status-floating {
    position: fixed;
    top: 120px;
    right: 30px;
    z-index: 1000;
}

.status-badge {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 15px 25px;
    border-radius: 30px;
    font-weight: 700;
    font-size: 1rem;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
    animation: pulse 2s infinite;
}

.status-open {
    background-color: #22c55e;
    color: #ffffff;
}

.status-closed {
    background-color: #ef4444;
    color: #ffffff;
}

.status-icon {
    font-size: 1.2rem;
}

/* Animations */
@keyframes float {
    0%, 100% {
        transform: translateY(0px);
    }
    50% {
        transform: translateY(-25px);
    }
}

@keyframes pulse {
    0%, 100% {
        transform: scale(1);
    }
    50% {
        transform: scale(1.05);
    }
}

/* Responsive Design */
@media (max-width: 1200px) {
    .hero-container,
    .category-container,
    .promo-container,
    .about-container,
    .menu-container,
    .app-container,
    .testimonials-container,
    .news-container,
    .newsletter-container {
        padding: 0 30px;
    }
    
    .hero-title {
        font-size: 3.5rem;
    }
    
    .hero-content {
        gap: 60px;
    }
}

@media (max-width: 1024px) {
    .hero-content,
    .about-container,
    .app-container {
        grid-template-columns: 1fr;
        gap: 60px;
        text-align: center;
    }
    
    .hero-title {
